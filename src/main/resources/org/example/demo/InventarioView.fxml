<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx"
            fx:controller="Controller.InventarioController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@theme.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="20">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="📊 Gestión de Inventarios (Entradas)" styleClass="titulo-principal"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="📊 Stock Bajo"
                    onAction="#mostrarStockBajo"
                    styleClass="btn-warning"/>
            <Button text="📄 Exportar PDF"
                    onAction="#exportarPDF"
                    styleClass="btn-warning"/>
        </HBox>

        <!-- INFO BOX -->
        <VBox style="-fx-background-color: #EBF5FB; -fx-border-color: #3498DB; -fx-border-width: 0 0 0 4; -fx-padding: 15; -fx-background-radius: 4;">
            <Label text="ℹ️ IMPORTANTE:" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
            <Label text="• Al guardar una entrada, se registrará automáticamente un MOVIMIENTO de tipo ENTRADA" wrapText="true"/>
            <Label text="• La cantidad ingresada se SUMA al inventario de la bodega seleccionada" wrapText="true"/>
            <Label text="• La cantidad ingresada también se SUMA al stock del producto" wrapText="true"/>
            <Label text="• El precio de venta se carga automáticamente del costo del producto" wrapText="true"/>
        </VBox>

        <VBox styleClass="card" spacing="0">

            <HBox style="-fx-background-color: #27AE60; -fx-background-radius: 8 8 0 0; -fx-padding: 15 20;">
                <Label text="📥 Información del Inventario"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
            </HBox>

            <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Bodega *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbBodega" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2">
                    <Label text="Producto *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbProducto" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Usuario *" styleClass="label-form" style="-fx-text-fill: #E74C3C;"/>
                    <ComboBox fx:id="cmbUsuario" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Cantidad *" styleClass="label-form"/>
                    <TextField fx:id="txtCantidad" promptText="0"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Precio Venta" styleClass="label-form"/>
                    <TextField fx:id="txtPrecioVenta"
                               promptText="Se carga automáticamente"
                               editable="false"
                               style="-fx-background-color: #F8F9FA;"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label text="Observación" styleClass="label-form"/>
                    <TextField fx:id="txtObservacion" promptText="Observaciones opcionales"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <Label text="Referencia" styleClass="label-form"/>
                    <TextField fx:id="txtReferencia" promptText="Ej: orden de compra, factura, etc."/>
                </VBox>

            </GridPane>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20 20 20;">
                <Button fx:id="btnNuevo"
                        text="📝 Nueva Entrada"
                        onAction="#nuevoInventario"
                        styleClass="btn-secondary"
                        prefWidth="130"/>

                <Button fx:id="btnGuardar"
                        text="💾 Guardar"
                        onAction="#guardarInventario"
                        styleClass="btn-success"
                        prefWidth="130"/>

                <Button fx:id="btnActualizar"
                        text="✏️ Actualizar"
                        onAction="#actualizarInventario"
                        styleClass="btn-primary"
                        prefWidth="130"/>

                <Button fx:id="btnEliminar"
                        text="🗑️ Eliminar"
                        onAction="#eliminarInventario"
                        styleClass="btn-danger"
                        prefWidth="130"/>

                <Button fx:id="btnLimpiar"
                        text="🧹 Limpiar"
                        onAction="#limpiarCampos"
                        styleClass="btn-secondary"
                        prefWidth="130"/>
            </HBox>

            <HBox alignment="CENTER" style="-fx-padding: 0 20 15 20;">
                <Label fx:id="lblMensaje" wrapText="true" style="-fx-min-height: 25px;"/>
            </HBox>

        </VBox>

        <VBox styleClass="card" spacing="15">

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20 20 0 20;">
                <Label text="Filtrar por Bodega:" styleClass="label-form"/>
                <ComboBox fx:id="cmbFiltroBodega" prefWidth="250"/>
                <Button text="Filtrar" onAction="#filtrarPorBodega" styleClass="btn-primary"/>
                <Button text="🔄 Todos" onAction="#cargarInventarios" styleClass="btn-secondary"/>
            </HBox>

            <TableView fx:id="tblInventarios" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"/>
                    <TableColumn fx:id="colPrecioVenta" text="Precio Venta" prefWidth="120"/>
                    <TableColumn fx:id="colFecha" text="Última Actualización" prefWidth="180"/>
                    <TableColumn fx:id="colBodega" text="ID Bodega" prefWidth="100"/>
                    <TableColumn fx:id="colProducto" text="ID Producto" prefWidth="110"/>
                </columns>
                <placeholder>
                    <Label text="No hay inventarios registrados"
                           style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                </placeholder>
            </TableView>

        </VBox>

    </VBox>
</ScrollPane>