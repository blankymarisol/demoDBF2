<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx"
            fx:controller="Controller.UnidadMedidaController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@theme.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="20">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="📏 Gestión de Unidades de Medida" styleClass="titulo-principal"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="🔄 Actualizar"
                    onAction="#cargar"
                    styleClass="btn-secondary"/>
            <Button text="📄 Exportar PDF"
                    onAction="#exportarPDF"
                    styleClass="btn-warning"/>
        </HBox>

        <VBox styleClass="card" spacing="0">

            <HBox style="-fx-background-color: #2C3E50; -fx-background-radius: 8 8 0 0; -fx-padding: 15 20;">
                <Label text="Información de la Unidad de Medida"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
            </HBox>

            <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

                <columnConstraints>
                    <ColumnConstraints percentWidth="60"/>
                    <ColumnConstraints percentWidth="40"/>
                </columnConstraints>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Nombre *" styleClass="label-form"/>
                    <TextField fx:id="txtNombre" promptText="Ej: Kilogramo"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Abreviatura *" styleClass="label-form"/>
                    <TextField fx:id="txtAbreviatura" promptText="Ej: kg"/>
                </VBox>

            </GridPane>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20 20 20;">
                <Button fx:id="btnNuevo"
                        text="➕ Nuevo"
                        onAction="#nuevo"
                        styleClass="btn-secondary"
                        prefWidth="110"/>

                <Button fx:id="btnGuardar"
                        text="💾 Guardar"
                        onAction="#guardar"
                        styleClass="btn-success"
                        prefWidth="110"/>

                <Button fx:id="btnActualizar"
                        text="✏️ Actualizar"
                        onAction="#actualizar"
                        styleClass="btn-primary"
                        prefWidth="110"/>

                <Button fx:id="btnEliminar"
                        text="🗑️ Eliminar"
                        onAction="#eliminar"
                        styleClass="btn-danger"
                        prefWidth="110"/>

                <Button fx:id="btnLimpiar"
                        text="🧹 Limpiar"
                        onAction="#limpiarCampos"
                        styleClass="btn-secondary"
                        prefWidth="110"/>
            </HBox>

            <HBox alignment="CENTER" style="-fx-padding: 0 20 15 20;">
                <Label fx:id="lblMensaje" wrapText="true" style="-fx-min-height: 25px;"/>
            </HBox>

        </VBox>

        <VBox styleClass="card" VBox.vgrow="ALWAYS">
            <TableView fx:id="tblUnidades" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="400"/>
                    <TableColumn fx:id="colAbreviatura" text="Abreviatura" prefWidth="200"/>
                </columns>
                <placeholder>
                    <Label text="No hay unidades de medida registradas"
                           style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                </placeholder>
            </TableView>
        </VBox>

    </VBox>
</ScrollPane>