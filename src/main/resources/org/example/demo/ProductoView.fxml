<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx"
            fx:controller="Controller.ProductoController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@theme.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="20">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="ðŸ“¦ GestiÃ³n de Productos" styleClass="titulo-principal"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ”„ Actualizar"
                    onAction="#cargarProductos"
                    styleClass="btn-secondary"/>
            <Button text="ðŸ“„ Exportar PDF"
                    onAction="#exportarPDF"
                    styleClass="btn-warning"/>
        </HBox>

        <!-- FORMULARIO -->
        <VBox styleClass="card" spacing="0">

            <!-- Card Header -->
            <HBox style="-fx-background-color: #2C3E50; -fx-background-radius: 8 8 0 0; -fx-padding: 15 20;">
                <Label text="InformaciÃ³n del Producto"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
            </HBox>

            <!-- Card Body -->
            <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <!-- Fila 1 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="SKU *" styleClass="label-form"/>
                    <TextField fx:id="txtSku" promptText="Ej: PROD-001"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2">
                    <Label text="Nombre del Producto *" styleClass="label-form"/>
                    <TextField fx:id="txtNombre" promptText="Nombre descriptivo"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Estado *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbEstado" maxWidth="Infinity"/>
                </VBox>

                <!-- Fila 2 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4">
                    <Label text="DescripciÃ³n" styleClass="label-form"/>
                    <TextField fx:id="txtDescripcion" promptText="DescripciÃ³n del producto"/>
                </VBox>

                <!-- Fila 3 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="Costo Unitario *" styleClass="label-form"/>
                    <TextField fx:id="txtCosto" promptText="0.00"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label text="Descuento" styleClass="label-form"/>
                    <TextField fx:id="txtDescuento" promptText="0.00"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <Label text="Stock" styleClass="label-form"/>
                    <TextField fx:id="txtStock" promptText="0"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="2">
                    <Label text="CategorÃ­a *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbCategoria" maxWidth="Infinity"/>
                </VBox>

                <!-- Fila 4 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="Tipo de Producto *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbTipoProducto" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label text="Unidad de Medida *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbUnidadMedida" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.columnSpan="2">
                    <Label text="URL de Imagen" styleClass="label-form"/>
                    <TextField fx:id="txtImagenURL" promptText="https://..."/>
                </VBox>

            </GridPane>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20 20 20;">
                <Button fx:id="btnNuevo"
                        text="âž• Nuevo"
                        onAction="#nuevoProducto"
                        styleClass="btn-secondary"
                        prefWidth="110"/>

                <Button fx:id="btnGuardar"
                        text="ðŸ’¾ Guardar"
                        onAction="#guardarProducto"
                        styleClass="btn-success"
                        prefWidth="110"/>

                <Button fx:id="btnActualizar"
                        text="âœï¸ Actualizar"
                        onAction="#actualizarProducto"
                        styleClass="btn-primary"
                        prefWidth="110"/>

                <Button fx:id="btnEliminar"
                        text="ðŸ—‘ï¸ Eliminar"
                        onAction="#eliminarProducto"
                        styleClass="btn-danger"
                        prefWidth="110"/>

                <Button fx:id="btnLimpiar"
                        text="ðŸ§¹ Limpiar"
                        onAction="#limpiarCampos"
                        styleClass="btn-secondary"
                        prefWidth="110"/>
            </HBox>

            <!-- Mensaje -->
            <HBox alignment="CENTER" style="-fx-padding: 0 20 15 20;">
                <Label fx:id="lblMensaje" wrapText="true" style="-fx-min-height: 25px;"/>
            </HBox>

        </VBox>

        <!-- BÃšSQUEDA Y TABLA -->
        <VBox styleClass="card" spacing="15">

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20 20 0 20;">
                <Label text="ðŸ” Buscar:" styleClass="label-form"/>
                <TextField fx:id="txtBuscar" promptText="Buscar por nombre..." prefWidth="300"/>
                <Button text="Buscar" onAction="#buscarProductos" styleClass="btn-primary"/>
            </HBox>

            <TableView fx:id="tblProductos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colSku" text="SKU" prefWidth="100"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                    <TableColumn fx:id="colDescripcion" text="DescripciÃ³n" prefWidth="200"/>
                    <TableColumn fx:id="colCosto" text="Costo" prefWidth="100"/>
                    <TableColumn fx:id="colDescuento" text="Descuento" prefWidth="100"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                </columns>
                <placeholder>
                    <Label text="No hay productos registrados"
                           style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                </placeholder>
            </TableView>

        </VBox>

    </VBox>
</ScrollPane>