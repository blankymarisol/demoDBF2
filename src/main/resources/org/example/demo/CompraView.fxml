<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx"
            fx:controller="Controller.CompraController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@theme.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="20">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="ðŸ›’ GestiÃ³n de Compras" styleClass="titulo-principal"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ”„ Actualizar"
                    onAction="#cargarCompras"
                    styleClass="btn-secondary"/>
            <Button text="ðŸ“„ Exportar PDF"
                    onAction="#exportarPDF"
                    styleClass="btn-warning"/>
        </HBox>

        <!-- INFO BOX -->
        <VBox style="-fx-background-color: #FEF9E7; -fx-border-color: #F39C12; -fx-border-width: 0 0 0 4; -fx-padding: 15; -fx-background-radius: 4;">
            <Label text="âš ï¸ IMPORTANTE:" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
            <Label text="â€¢ Al guardar una compra, se registrarÃ¡ automÃ¡ticamente un MOVIMIENTO de tipo SALIDA" wrapText="true"/>
            <Label text="â€¢ La cantidad comprada se descontarÃ¡ del INVENTARIO de la bodega seleccionada" wrapText="true"/>
            <Label text="â€¢ La cantidad comprada tambiÃ©n se descontarÃ¡ del STOCK del producto" wrapText="true"/>
            <Label text="â€¢ Las compras NO pueden ser eliminadas una vez guardadas" wrapText="true" style="-fx-text-fill: #E74C3C; -fx-font-weight: bold;"/>
        </VBox>

        <VBox styleClass="card" spacing="0">

            <HBox style="-fx-background-color: #2C3E50; -fx-background-radius: 8 8 0 0; -fx-padding: 15 20;">
                <Label text="InformaciÃ³n de la Compra"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
            </HBox>

            <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Fecha *" styleClass="label-form"/>
                    <DatePicker fx:id="dpFechaCompra" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Proveedor *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbProveedor" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Estado *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbEstado" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Total" styleClass="label-form"/>
                    <TextField fx:id="txtTotal"
                               promptText="Se calcula automÃ¡ticamente"
                               editable="false"
                               style="-fx-background-color: #F8F9FA;"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Bodega *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbBodega" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Usuario *" styleClass="label-form"/>
                    <ComboBox fx:id="cmbUsuario" maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label text="ObservaciÃ³n" styleClass="label-form"/>
                    <TextField fx:id="txtObservacion" promptText="Opcional"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <Label text="Referencia" styleClass="label-form"/>
                    <TextField fx:id="txtReferencia" promptText="Opcional"/>
                </VBox>

            </GridPane>

            <Separator/>

            <!-- Agregar productos -->
            <VBox spacing="10" style="-fx-padding: 20;">
                <Label text="âž• Agregar Productos a la Compra"
                       style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Producto" styleClass="label-form"/>
                        <ComboBox fx:id="cmbProducto" prefWidth="300"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Cantidad" styleClass="label-form"/>
                        <TextField fx:id="txtCantidad" promptText="0" prefWidth="100"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Precio Unitario" styleClass="label-form"/>
                        <TextField fx:id="txtPrecioUnitario" promptText="0.00" prefWidth="120"/>
                    </VBox>

                    <Button text="âž• Agregar"
                            onAction="#agregarProducto"
                            styleClass="btn-success"
                            style="-fx-margin-top: 25;"/>
                </HBox>

                <!-- Tabla de detalles -->
                <TableView fx:id="tblDetalles" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="colProducto" text="Producto" prefWidth="300"/>
                        <TableColumn fx:id="colCantidadDetalle" text="Cantidad" prefWidth="100"/>
                        <TableColumn fx:id="colPrecioDetalle" text="Precio Unit." prefWidth="120"/>
                        <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120"/>
                    </columns>
                    <placeholder>
                        <Label text="No hay productos agregados"
                               style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                    </placeholder>
                </TableView>
            </VBox>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20 20 20;">
                <Button text="ðŸ“ Nueva Compra"
                        onAction="#nuevaCompra"
                        styleClass="btn-secondary"
                        prefWidth="130"/>

                <Button text="ðŸ’¾ Guardar Compra"
                        onAction="#guardarCompra"
                        styleClass="btn-success"
                        prefWidth="130"/>

                <Button text="ðŸ”„ Actualizar Estado"
                        onAction="#actualizarEstado"
                        styleClass="btn-primary"
                        prefWidth="140"/>

                <Button text="ðŸ§¹ Limpiar"
                        onAction="#limpiarCampos"
                        styleClass="btn-secondary"
                        prefWidth="130"/>
            </HBox>

            <HBox alignment="CENTER" style="-fx-padding: 0 20 15 20;">
                <Label fx:id="lblMensaje" wrapText="true" style="-fx-min-height: 25px;"/>
            </HBox>

        </VBox>

        <!-- Historial -->
        <VBox styleClass="card" spacing="15">

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20 20 0 20;">
                <Label text="ðŸ“‹ Historial de Compras" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Filtrar por Estado:" styleClass="label-form"/>
                <ComboBox fx:id="cmbFiltroEstado" prefWidth="150"/>
                <Button text="Filtrar" onAction="#filtrarPorEstado" styleClass="btn-primary"/>
            </HBox>

            <TableView fx:id="tblCompras" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                    <TableColumn fx:id="colProveedor" text="ID Prov." prefWidth="90"/>
                    <TableColumn fx:id="colNombreProveedor" text="Proveedor" prefWidth="200"/>
                </columns>
                <placeholder>
                    <Label text="No hay compras registradas"
                           style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                </placeholder>
            </TableView>

        </VBox>

    </VBox>
</ScrollPane>