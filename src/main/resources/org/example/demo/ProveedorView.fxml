<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx"
            fx:controller="Controller.ProveedorController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@theme.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="20">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="🏭 Gestión de Proveedores" styleClass="titulo-principal"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="🔄 Actualizar"
                    onAction="#cargarProveedores"
                    styleClass="btn-secondary"/>
            <Button text="📄 Exportar PDF"
                    onAction="#exportarPDF"
                    styleClass="btn-warning"/>
        </HBox>

        <VBox styleClass="card" spacing="0">

            <HBox style="-fx-background-color: #2C3E50; -fx-background-radius: 8 8 0 0; -fx-padding: 15 20;">
                <Label text="Información del Proveedor"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
            </HBox>

            <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Nombre *" styleClass="label-form"/>
                    <TextField fx:id="txtNombre" promptText="Nombre del proveedor"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Teléfono *" styleClass="label-form"/>
                    <TextField fx:id="txtTelefono" promptText="12345678"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Correo *" styleClass="label-form"/>
                    <TextField fx:id="txtCorreo" promptText="correo@ejemplo.com"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="NIT *" styleClass="label-form"/>
                    <TextField fx:id="txtNIT" promptText="12345678-9"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                    <Label text="Dirección *" styleClass="label-form"/>
                    <TextField fx:id="txtDireccion" promptText="Dirección completa"/>
                </VBox>

            </GridPane>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20 20 20;">
                <Button fx:id="btnNuevo"
                        text="➕ Nuevo"
                        onAction="#nuevoProveedor"
                        styleClass="btn-secondary"
                        prefWidth="110"/>

                <Button fx:id="btnGuardar"
                        text="💾 Guardar"
                        onAction="#guardarProveedor"
                        styleClass="btn-success"
                        prefWidth="110"/>

                <Button fx:id="btnActualizar"
                        text="✏️ Actualizar"
                        onAction="#actualizarProveedor"
                        styleClass="btn-primary"
                        prefWidth="110"/>

                <Button fx:id="btnEliminar"
                        text="🗑️ Eliminar"
                        onAction="#eliminarProveedor"
                        styleClass="btn-danger"
                        prefWidth="110"/>

                <Button fx:id="btnLimpiar"
                        text="🧹 Limpiar"
                        onAction="#limpiarCampos"
                        styleClass="btn-secondary"
                        prefWidth="110"/>
            </HBox>

            <HBox alignment="CENTER" style="-fx-padding: 0 20 15 20;">
                <Label fx:id="lblMensaje" wrapText="true" style="-fx-min-height: 25px;"/>
            </HBox>

        </VBox>

        <VBox styleClass="card" spacing="15">

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20 20 0 20;">
                <Label text="🔍 Buscar:" styleClass="label-form"/>
                <TextField fx:id="txtBuscar" promptText="Buscar por nombre..." prefWidth="300"/>
                <Button text="Buscar" onAction="#buscarProveedores" styleClass="btn-primary"/>
            </HBox>

            <TableView fx:id="tblProveedores" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="200"/>
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200"/>
                    <TableColumn fx:id="colNIT" text="NIT" prefWidth="120"/>
                </columns>
                <placeholder>
                    <Label text="No hay proveedores registrados"
                           style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                </placeholder>
            </TableView>

        </VBox>

    </VBox>
</ScrollPane>