<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainController">

    <!-- Top: Título y Usuario -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Sistema de Gestión DevSolutionsF" textFill="white">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>
                    <Label text="Control de Inventario, Compras y Proveedores" textFill="#ecf0f1">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                </VBox>

                <!-- Información del usuario -->
                <VBox spacing="3" alignment="CENTER_RIGHT">
                    <Label fx:id="lblUsuarioActual" text="Usuario: ---" textFill="white" style="-fx-font-size: 13; -fx-font-weight: bold;"/>
                    <Label fx:id="lblRolActual" text="Rol: ---" textFill="#3498db" style="-fx-font-size: 13; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Botón cerrar sesión -->
                <Button fx:id="btnCerrarSesion" text="🚪 Cerrar Sesión" onAction="#cerrarSesion"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"
                        prefWidth="150"/>
            </HBox>
        </VBox>
    </top>

    <!-- Left: Menú de navegación -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="MENÚ PRINCIPAL" textFill="white" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
            <Separator/>

            <Button fx:id="btnProductos" text="📦 Productos" onAction="#abrirProductos"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnProveedores" text="🏢 Proveedores" onAction="#abrirProveedores"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnUsuarios" text="👤 Usuarios" onAction="#abrirUsuarios"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnInventarios" text="📊 Inventarios" onAction="#abrirInventarios"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnCompras" text="🛒 Compras" onAction="#abrirCompras"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnBodegas" text="🏭 Bodegas" onAction="#abrirBodegas"
                    prefWidth="180" styleClass="menu-button"/>

            <Separator/>
            <Label text="CATÁLOGOS" textFill="white" style="-fx-font-weight: bold; -fx-font-size: 12;"/>

            <Button fx:id="btnCategorias" text="📑 Categorías" onAction="#abrirCategorias"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnTipoProductos" text="🏷️ Tipos de Producto" onAction="#abrirTipoProductos"
                    prefWidth="180" styleClass="menu-button"/>
            <Button fx:id="btnUnidadMedidas" text="📏 Unidades de Medida" onAction="#abrirUnidadMedidas"
                    prefWidth="180" styleClass="menu-button"/>
        </VBox>
    </left>

    <!-- Center: Área de contenido -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <VBox alignment="CENTER" spacing="20">
                <!-- Imagen de Kirby -->
                <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@images/kirby.png"/>
                    </image>
                </ImageView>

                <Label text="Bienvenido al Sistema de Gestión"
                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Selecciona una opción del menú para comenzar"
                       style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;"/>

                <!-- Indicadores de permisos -->
                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white;
                                                             -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Permisos de tu Rol" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator prefWidth="300"/>
                    <Label text="Tus permisos se ajustan automáticamente según tu rol"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 13;"/>
                    <Label text="Las opciones deshabilitadas no están disponibles para tu nivel de acceso"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 13;"/>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom: Barra de estado -->
    <bottom>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10;" spacing="20">
            <Label fx:id="lblEstado" text="Sistema listo" textFill="white"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblConexion" text="● Conectado" textFill="#2ecc71" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
