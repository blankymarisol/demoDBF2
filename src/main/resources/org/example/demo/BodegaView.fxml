<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx"
            fx:controller="Controller.BodegaController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@theme.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="20">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="🏪 Gestión de Bodegas" styleClass="titulo-principal"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="🔄 Actualizar"
                    onAction="#cargarBodegas"
                    styleClass="btn-secondary"/>
            <Button text="📄 Exportar PDF"
                    onAction="#exportarPDF"
                    styleClass="btn-warning"/>
        </HBox>

        <!-- FORMULARIO -->
        <VBox styleClass="card" spacing="0">

            <HBox style="-fx-background-color: #2C3E50; -fx-background-radius: 8 8 0 0; -fx-padding: 15 20;">
                <Label text="Información de la Bodega"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
            </HBox>

            <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Nombre *" styleClass="label-form"/>
                    <TextField fx:id="txtNombre" promptText="Nombre de la bodega"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Teléfono *" styleClass="label-form"/>
                    <TextField fx:id="txtTelefono" promptText="12345678"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                    <Label text="Ubicación *" styleClass="label-form"/>
                    <TextField fx:id="txtUbicacion" promptText="Dirección completa"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                    <Label text="Descripción" styleClass="label-form"/>
                    <TextField fx:id="txtDescripcion" promptText="Descripción"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="Capacidad *" styleClass="label-form"/>
                    <TextField fx:id="txtCapacidad" promptText="0"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label text="ID Municipio *" styleClass="label-form"/>
                    <TextField fx:id="txtMunicipioId" promptText="0"/>
                </VBox>

            </GridPane>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20 20 20;">
                <Button fx:id="btnNuevo"
                        text="➕ Nuevo"
                        onAction="#nuevaBodega"
                        styleClass="btn-secondary"
                        prefWidth="110"/>

                <Button fx:id="btnGuardar"
                        text="💾 Guardar"
                        onAction="#guardarBodega"
                        styleClass="btn-success"
                        prefWidth="110"/>

                <Button fx:id="btnActualizar"
                        text="✏️ Actualizar"
                        onAction="#actualizarBodega"
                        styleClass="btn-primary"
                        prefWidth="110"/>

                <Button fx:id="btnEliminar"
                        text="🗑️ Eliminar"
                        onAction="#eliminarBodega"
                        styleClass="btn-danger"
                        prefWidth="110"/>

                <Button fx:id="btnLimpiar"
                        text="🧹 Limpiar"
                        onAction="#limpiarCampos"
                        styleClass="btn-secondary"
                        prefWidth="110"/>
            </HBox>

            <HBox alignment="CENTER" style="-fx-padding: 0 20 15 20;">
                <Label fx:id="lblMensaje" wrapText="true" style="-fx-min-height: 25px;"/>
            </HBox>

        </VBox>

        <!-- TABLA -->
        <VBox styleClass="card" VBox.vgrow="ALWAYS">

            <TableView fx:id="tblBodegas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                    <TableColumn fx:id="colUbicacion" text="Ubicación" prefWidth="200"/>
                    <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="200"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100"/>
                    <TableColumn fx:id="colCapacidad" text="Capacidad" prefWidth="100"/>
                    <TableColumn fx:id="colMunicipio" text="ID Municipio" prefWidth="100"/>
                </columns>
                <placeholder>
                    <Label text="No hay bodegas registradas"
                           style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
                </placeholder>
            </TableView>

        </VBox>

    </VBox>
</ScrollPane>